package quiz04;

public class Soldier {
	
	//field
	private String name;
	private Gun gun;
	
	public Soldier(String name, Gun gun) {
		this.name = name;
		this.gun = gun;
	}
	
	public void shoot() {
		gun.shoot();
	}
	
	public void reload() {
		gun.reload();
	}
	
	void info() {
		System.out.println(name + ", ");
		gun.info();
	}
}
	
	