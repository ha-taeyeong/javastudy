package quiz04;

public class Book {
	
	String title;
	String writer;
	int price;
	
	void set(String t, String w, int p) {
		title = t;
		writer = w;
		price = p;
	}
	
	void set(String t, String w) {
		set(t, w);
	}
	
	void set(String t, int p) {
		set(t, p);
	}
	
	void info() {
		System.out.println("제목: " + t +", 저자: " + w + ", 가격 : " + p);
	}
	
}
